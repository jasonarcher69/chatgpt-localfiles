openapi: 3.0.1
info:
  title: Local Files Plugin
  description: Access files from your local machine
  version: "1.0.0"
servers:
  - url: http://localhost:9900
paths:
  /list-files:
    get:
      summary: List all files
      operationId: listFiles
      responses:
        '200':
          description: A list of files
  /read-file:
    get:
      summary: Read the contents of a file
      operationId: readFile
      parameters:
        - in: query
          name: name
          required: true
          schema:
            type: string
      responses:
        '200':
          description: File content
  /search:
    get:
      summary: Search for a term in all files
      operationId: searchFiles
      parameters:
        - in: query
          name: query
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Matching results
